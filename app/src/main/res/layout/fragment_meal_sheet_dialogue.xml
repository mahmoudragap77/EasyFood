<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mealsheet.MealSheetDialogue"
    android:id="@+id/sheet_dialogue_ide">

    <ImageView
        android:id="@+id/img_sheet_id"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/accent"
        android:layout_margin="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_id"
        app:layout_constraintStart_toEndOf="@+id/img_sheet_id"
        app:layout_constraintTop_toTopOf="@+id/img_sheet_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sheet_place_id"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/location"
            android:fontFamily="@font/myfont"
            android:text="palastine"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
        <TextView
            android:id="@+id/sheet_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef"
            android:drawableStart="@drawable/categories"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/myfont"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sheet_mealName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textColor="@color/black"
        android:fontFamily="@font/myfont"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_id"
        app:layout_constraintStart_toStartOf="@id/linear_layout_id"
        android:layout_marginTop="@dimen/_5sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More..."
        android:textColor="@color/black"
        android:fontFamily="@font/myfont"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@+id/sheet_mealName_id"
        app:layout_constraintStart_toStartOf="@id/sheet_mealName_id"
        android:layout_marginTop="@dimen/_5sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>